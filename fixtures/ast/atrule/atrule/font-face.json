    "@font-face with no block is not an error": {
        "source": "@font-face;",
        "ast": {
            "type": "Atrule",
            "name": "font-face",
            "prelude": null,
            "block": null
        }
    },
    "@font-face with prelude is not an error": {
        "source": "@font-face foo {}",
        "generate": "@font-face foo{}",
        "ast": {
            "type": "Atrule",
            "name": "font-face",
            "prelude": {
                "type": "AtrulePrelude",
                "children": [
                    {
                        "type": "Identifier",
                        "name": "foo"
                    }
                ]
            },
            "block": {
                "type": "Block",
                "children": []
            }
        }
    },
    "@font-face with declaration looks like a rule in block": {
        "source": "@font-face { a:b {} }",
        "generate": "@font-face{a:b {}}",
        "ast": {
            "type": "Atrule",
            "name": "font-face",
            "prelude": null,
            "block": {
                "type": "Block",
                "children": [
                    {
                        "type": "Declaration",
                        "important": false,
                        "property": "a",
                        "value": {
                            "type": "Raw",
                            "value": "b {}"
                        }
                    }
                ]
            }
        }
    },
    "error": [
        {
            "source": "@font-face { a {} }",
